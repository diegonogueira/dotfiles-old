# Polybar

exec --no-startup-id polybar -r mybar

# i3-gaps

# You can also use any non-zero value if you'd like to have a border
for_window [class=".*"] border pixel 4

gaps inner 20
gaps outer 10

set $mode_gaps Gaps: (o) outer, (i) inner
set $mode_gaps_outer Outer Gaps: +|-|0 (local), Shift + +|-|0 (global)
set $mode_gaps_inner Inner Gaps: +|-|0 (local), Shift + +|-|0 (global)
bindsym $mod+Shift+g mode "$mode_gaps"

mode "$mode_gaps" {
  bindsym o      mode "$mode_gaps_outer"
  bindsym i      mode "$mode_gaps_inner"
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

mode "$mode_gaps_inner" {
  bindsym plus  gaps inner current plus 5
  bindsym minus gaps inner current minus 5
  bindsym 0     gaps inner current set 20

  bindsym Shift+plus  gaps inner all plus 5
  bindsym Shift+minus gaps inner all minus 5
  bindsym Shift+0     gaps inner all set 20

  bindsym Return mode "default"
  bindsym Escape mode "default"
}
mode "$mode_gaps_outer" {
  bindsym plus  gaps outer current plus 5
  bindsym minus gaps outer current minus 5
  bindsym 0     gaps outer current set 10

  bindsym Shift+plus  gaps outer all plus 5
  bindsym Shift+minus gaps outer all minus 5
  bindsym Shift+0     gaps outer all set 10

  bindsym Return mode "default"
  bindsym Escape mode "default"
}

# Only enable gaps on a workspace when there is at least one container
# smart_gaps on
smart_borders on

# keyboard config
exec --no-startup-id xset r rate 200 50
exec "setxkbmap -model pc104 -layout us_intl"
exec_always "setxkbmap -option ctrl:swapcaps"

# mouse config
focus_follows_mouse no
mouse_warping       none
# get the xinput id
#  xinput --list
#  xinput --watch-props <id>
exec "xinput --set-prop 15 'libinput Natural Scrolling Enabled' 1"

# redshift
exec_always --no-startup-id xrandr --output eDP --brightness 0.5
exec_always --no-startup-id "killall -q redshift; sleep 4; redshift"
# get the screen id
#  xrandr -q | grep ' connected' | head -n 1 | cut -d ' ' -f1

# background images
exec --no-startup-id feh --bg-scale ~/.config/i3/wp/Monsoon-1-1024x576.jpg

# sound
exec_always --no-startup-id amixer sset 'Mic Boost' 100
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +3% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -3% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound

# sleep
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (p) shutdown
mode "$mode_system" {
  bindsym l exec --no-startup-id i3lock, mode "default"
  bindsym e exec --no-startup-id i3-msg exit, mode "default"
  bindsym s exec --no-startup-id systemctl suspend, mode "default"
  bindsym h exec --no-startup-id systemctl hibernate, mode "default"
  bindsym r exec --no-startup-id systemctl reboot, mode "default"
  bindsym p exec --no-startup-id systemctl poweroff, mode "default"

  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym $mod+Escape mode "$mode_system"

# Compton
exec_always --no-startup-id "killall -q compton; compton"
